{
  "name": "obsidian-web-clipper",
  "packageManager": "yarn@3.1.1",
  "type": "module",
  "version": "0.2.0",
  "scripts": {
    "ng": "ng",
    "lint": "cd ./dist && web-ext lint",
    "lint:dev": "npm-run-all build:dev lint",
    "build": "npm-run-all build:angular lint package",
    "build:angular": "npm-run-all build:common build:content",
    "build:common": "ng build common --extra-webpack-config projects/common/webpack.externals.cjs",
    "build:content": "ng build content --single-bundle",
    "package": "cd ./dist && web-ext build",
    "build:dev": "npm-run-all build:dev:common build:dev:content",
    "build:dev:common": "ng build common --configuration development --extra-webpack-config projects/common/webpack.externals.cjs",
    "build:dev:content": "ng build content --configuration development  --single-bundle",
    "watch": "ng build common --configuration development --stats-json --extra-webpack-config projects/common/webpack.externals.cjs --delete-output-path true && npm run watch:all",
    "watch:all": "run-p watch:common watch:content watch:package",
    "watch:common": "ng build common --stats-json --extra-webpack-config projects/common/webpack.externals.cjs --watch --configuration development",
    "watch:content": "ng build content --watch --configuration development --single-bundle",
    "watch:package": "cd ./dist && web-ext run --verbose",
    "postinstall": "ngcc",
    "postinstall:bak": "ngcc",
    "analyze": "webpack-bundle-analyzer dist/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.2.2",
    "@angular/common": "~13.2.2",
    "@angular/compiler": "~13.2.2",
    "@angular/core": "~13.2.2",
    "@angular/elements": "13.2.2",
    "@angular/forms": "~13.2.2",
    "@angular/platform-browser": "~13.2.2",
    "@angular/platform-browser-dynamic": "~13.2.2",
    "@angular/router": "~13.2.2",
    "@webcomponents/custom-elements": "^1.5.0",
    "article-parser": "https://github.com/SettingDust/article-parser#feat/browser_build",
    "filenamify": "5.1.0",
    "rxjs": "~7.5.4",
    "tslib": "^2.3.0",
    "turndown": "^7.1.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.3",
    "@angular/cli": "~13.2.3",
    "@angular/compiler-cli": "~13.2.2",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/node": "~16.11.24",
    "@types/sanitize-html": "^2.6.2",
    "@types/turndown": "^5.0.1",
    "ngx-build-plus": "13.0.1",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.5.5",
    "web-ext": "^6.7.0",
    "webpack": "^5.68.0",
    "webpack-bundle-analyzer": "^4.5.0"
  }
}
