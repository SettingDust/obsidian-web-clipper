{
  "name": "obsidian-web-clipper",
  "version": "0.2.0",
  "scripts": {
    "ng": "ng",
    "lint": "cd ./dist && web-ext lint",
    "lint:dev": "npm-run-all build:dev lint",
    "build": "npm-run-all build:angular lint package",
    "build:angular": "npm-run-all build:common build:content-script",
    "build:common": "ng build common",
    "build:content-script": "ng build content-script --extra-webpack-config projects/content-script/webpack.externals.js --single-bundle",
    "package": "cd ./dist && web-ext build",
    "build:dev": "npm-run-all build:common build:content-script",
    "build:dev:common": "ng build common --configuration development",
    "build:dev:content-script": "ng build content-script --extra-webpack-config projects/content-script/webpack.externals.js --configuration development  --single-bundle",
    "watch": "npm-run-all build:dev:common watch:all",
    "watch:all": "run-p watch:common watch:content-script watch:package",
    "watch:common": "ng build common --watch --configuration development",
    "watch:content-script": "ng build content-script --watch --configuration development --single-bundle",
    "watch:package": "npm run build:dev:common && cd ./dist && web-ext run --verbose --firefox=\"D:\\Program Files\\scoop\\apps\\firefox-developer-zh-cn\\current\\firefox.exe\"",
    "postinstall": "ngcc"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.0.2",
    "@angular/common": "~12.0.2",
    "@angular/compiler": "~12.0.2",
    "@angular/core": "~12.0.2",
    "@angular/elements": "12.0.5",
    "@angular/forms": "~12.0.2",
    "@angular/platform-browser": "~12.0.2",
    "@angular/platform-browser-dynamic": "~12.0.2",
    "@angular/router": "~12.0.2",
    "article-parser": "git://github.com/SettingDust/article-parser.git",
    "document-register-element": "^1.7.2",
    "filenamify": "git://github.com/SettingDust/filenamify.git",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "turndown": "^7.1.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.2",
    "@angular/cli": "~12.0.2",
    "@angular/compiler-cli": "~12.0.2",
    "@types/archiver": "^5.1.1",
    "@types/firefox-webext-browser": "^82.0.1",
    "@types/jquery": "^3.5.6",
    "@types/node": "^12.11.1",
    "@types/turndown": "^5.0.1",
    "ngx-build-plus": "12.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.2.3",
    "web-ext": "^6.4.0",
    "webpack-bundle-analyzer": "^4.4.2"
  }
}
